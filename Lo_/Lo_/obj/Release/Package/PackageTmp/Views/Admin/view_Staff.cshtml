@model IEnumerable<Lo.Models.Lo_authenticate_Staff_data>
 
 
<div class="card">
    <div class="card-body">
        <h4 class="card-title">View Staff</h4> 
        <div class="table-responsive">
            <table class="table table-striped table-bordered zero-configuration">
                <thead>
                    <tr>
                        <th>   </th> 
                        <th>first name</th>
                        <th>last name</th>
                        <th>email</th>
                        <th>role</th>
                        <th>lab</th>
 
                    </tr> 
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>                            
                            <td>@Html.ActionLink("Select", "edit_Staff", new
                           {
                            id=item.Id, 
                            lab = item.Lab
                            ,password2 = item.Password2
                            ,password = item.Password
                            ,role = item.Role
                            ,email = item.Email
                            ,last_name = item.Last_name
                            ,first_name = item.First_name
                               })</td> 
                           <td>@Html.DisplayFor(modelItem => item.First_name)</td>
                           <td>@Html.DisplayFor(modelItem => item.Last_name)</td>
                           <td>@Html.DisplayFor(modelItem => item.Email)</td>
                           <td>@Html.DisplayFor(modelItem => item.Role_data)</td>
                           <td>@Html.DisplayFor(modelItem => item.Lab_data)</td>
                        </tr>
                    }
                    
                </tbody>
                <tfoot>
                    <tr>                        
                        <th>   </th> 
                        <th>first name</th>
                        <th>last name</th>
                        <th>email</th>
                        <th>role</th>
                        <th>lab</th>
 
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div> 
<script> 
    function msg(txt) {
        sweetAlert("...", txt, "info");
    }
    var statusMessage = "@ViewBag.status" || false; 
    if (statusMessage != false && statusMessage.length > 0) {
        msg(statusMessage); 
    }
</script>