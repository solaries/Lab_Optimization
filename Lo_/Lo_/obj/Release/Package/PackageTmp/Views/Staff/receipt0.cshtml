        <div class="text-right">
            <button onclick="printDocument3( )" id="printInvoice" class="btn btn-info"><i class="fa fa-print"></i> Back</button>
            <button onclick="printDocument2( )" id="printInvoice" class="btn btn-info"><i class="fa fa-print"></i> Send as email</button>
            <button onclick="printDocument( )" class="btn btn-info"><i class="fa fa-file-pdf-o"></i> Export as PDF</button>
        </div>
        <hr>
