@model IEnumerable<Lo.Models.Lo_Test_Type_data>
 
 
<div class="card">
    <div class="card-body">
        <h4 class="card-title">View Test Type</h4> 
        <div class="table-responsive">
            <table class="table table-striped table-bordered zero-configuration">
                <thead>
                    <tr>
                        <th>   </th> 
                        <th>test name</th>
                        <th>price</th>
                        <th>lab</th>
 
                    </tr> 
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>                            
                            <td>@Html.ActionLink("Select", "edit_Test_Type", new
                           {
                            id=item.Id, 
                            lab = item.Lab
                            ,price = item.Price
                            ,test_name = item.Test_name
                               })</td> 
                           <td>@Html.DisplayFor(modelItem => item.Test_name)</td>
                           <td>@Html.DisplayFor(modelItem => item.Price)</td>
                           <td>@Html.DisplayFor(modelItem => item.Lab_data)</td>
                        </tr>
                    }
                    
                </tbody>
                <tfoot>
                    <tr>                        
                        <th>   </th> 
                        <th>test name</th>
                        <th>price</th>
                        <th>lab</th>
 
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div> 
<script> 
    function msg(txt) {
        sweetAlert("...", txt, "info");
    }
    var statusMessage = "@ViewBag.status" || false; 
    if (statusMessage != false && statusMessage.length > 0) {
        msg(statusMessage); 
    }
</script>